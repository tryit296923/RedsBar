@{
    ViewData["Title"] = "櫃台付款頁面";
    Layout = "_LayoutMobile";
}
<style>
    body {
        background-color: #222220;
    }

    .colorbox {
        background-color: #D8CDB9;
        display: flex;
        justify-content: center;
        text-align: center;
        border-radius: 0.375rem;
        color: #222220;
        font-weight: bold;
        align-items: center;
        margin-bottom: 20px;
        margin-top: 50px;
    }

    .succeedmessage {
        font-size: x-large;
        margin-bottom: 0px;
        height: 65px;
        line-height: 65px;
    }

    img {
        width: 200px;
        height: 200px;
    }

    .orderdetail {
        border: 1px solid #D8CDB9;
        border-radius: 0.375rem;
        padding: 20px 12px 20px 12px !important;
        color: white;
    }

        .orderdetail p {
            margin-bottom: 0px;
        }

    .orderinfotext {
        font-size: large;
    }

    .feedbackmessage {
        color: white;
        font-size: larger;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    hr {
        color: gray;
    }

    .btnfeedback {
        background-color: #721B29;
        color: white;
        border: none;
        height: 40px;
        border-radius: 0.375rem;
        font-weight: bold;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    a {
        text-decoration: none;
    }

        a:hover {
            color: white;
        }

        a:active {
            background-color: #C28C2E;
        }
</style>

<div class="container">
    <div class="row" id="frontDeskCheck">
        <div class="container-fluid colorbox py-2 col-10 col-xl-8 text-center">
            <div class="succeedmessage"><i class="fa-sharp fa-solid fa-image"></i> 請於櫃台出示此畫面</div>
        </div>
        <div class="container-fluid col-10 col-xl-8 align-self-center my-5 px-0">
            <div class="orderdetail text-center py-2">
                <p class="orderinfotext">結帳時間 : {{dateTime(orderToCheck.orderTime)}}</p>
                <p class="orderinfotext">桌號 : {{orderToCheck.desk}}</p>
                <p class="orderinfotext">訂單編號 : {{orderToCheck.orderId}}</p>
            </div>
        </div>
        <div class="container-fluid col-10 col-xl-8 text-center align-self-center px-0">
            <hr>
            <div class="feedbackmessage">
                <p><i class="fa-sharp fa-solid fa-pen"></i> 為我們留下評分:</p>
            </div>
            <div>
                <a href="" class="btnfeedback">顧客意見表</a>
            </div>
        </div>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script>
    var connection = new signalR.HubConnectionBuilder().withUrl("/notifyHub").build();
    connection.on("OK", function (desk) {
        console.log(desk);
        if(desk == app.orderToCheck.desk){
            Swal.fire({
                title: '付款成功!',
                text: '請不吝填寫顧客意見表',
                imageUrl: '',
                imageWidth: 400,
                imageHeight: 200,
                imageAlt: 'Custom image',
            })
        }
    });
    connection.start();

    var app = new Vue({
        el: "#frontDeskCheck",
        data: {
            orderToCheck: {},
        },
        methods: {
            getOrder: function () {
                fetch("/api/Order/GetOrder")
                    .then(response => response.json())
                    .then(result => { this.orderToCheck = result })
            },
            dateTime: function (ot) {
                var newOt = ot.toString().substring(0, 16);
                return newOt.replace("T", " ");
            },
        },
        mounted: function () {
            this.getOrder();
        }
    })
</script>