<div id="vueproductModal">
    <!-- banner -->
    <!-- 菜單 -->
    <div class="menu">
        <div class="tab-content">
            <!-- 招牌調酒 -->
            <div class="tab-pane fade show  active" id="signatureCT" role="tabpanel" aria-labelledby="signatureCT-tab"
                 tabindex="0">
                <div class="container signatureCT">
                    <div class="row g-4 ">
                        <template v-for="item in product">
                            <div class="col-6 col-md-4 p-1">
                                <div class="card productcard">
                                    <img :src="item.path" class="p-2 w-100" :id="item.id" data-bs-toggle="modal"
                                         data-bs-target="#productModal" @@click="selected">
                                    <div class="card-body btnaddtocart">
                                        <div :id="item.id" data-bs-toggle="modal" data-bs-target="#productModal"
                                             @@click="selected">
                                            <p class="card-title">{{item.name}}</p>
                                            <span class="price">${{item.price}}</span>
                                            <span class="discount">${{Math.round(item.price*item.discountAmount)}}</span>
                                            <span class="sale px-2">SALE</span>
                                        </div>
                                        <div class="row justify-content-center my-2 mx-0 quantitygroup">
                                            <button type="button" @@click="minus"
                                                    class="col-2 p-0 btn btn-dark btn-sm minus-btn">
                                                <i class="fa fa-minus"></i>
                                            </button>
                                            <div class="col-8 p-0">
                                                <input type="number" :name="item.name" :id="item.id"
                                                       class="form-control form-control-sm qty_input text-center"
                                                       value="0" :price="item.price" :discount="item.discount" readonly>
                                            </div>
                                            <button type="button" @@click="plus"
                                                    class="col-2 p-0 btn btn-dark btn-sm plus-btn">
                                                <i class="fa fa-plus"></i>
                                            </button>
                                        </div>
                                        <button type="button" class="col-12 btn" @@click="sessionStr">加到購物車</button>
                                    </div>
                                </div>
                            </div>
                        </template>
                    </div>
                </div>
            </div>
            <!-- 推薦/促銷 -->
            <div class="tab-pane fade" id="recommendedCT" role="tabpanel" aria-labelledby="recommendedCT-tab"y
                 tabindex="0">
                <div class="container recommendedCT">
                    <div class="row g-4 ">
                        <div id="carouselrecommendCaptions" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-indicators">
                                <button type="button" data-bs-target="#carouselrecommendCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                                <button type="button" data-bs-target="#carouselrecommendCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                                <button type="button" data-bs-target="#carouselrecommendCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                            </div>
                            <div class="carousel-inner">
                                <div  v-for="(item, i) in recommendHeadProd" :key="i" v-if="i==0" class="carousel-item active" data-bs-interval="5000">
                                    <img :src="item.path" class="d-block h-50 w-100 " :id="item.id" data-bs-toggle="modal"
                                         data-bs-target="#productModal" @@click="selected">
                                    <div class="carousel-caption p-0 d-md-block">
                                        <h5 >{{item.name}}</h5>
                                        <p >{{item.description}}</p>
                                    </div>
                                </div>
                                <div  v-for="(item, i) in recommendHeadProd" :key="i" v-if="i==1" class="carousel-item " data-bs-interval="2000">
                                    <img :src="item.path" class="d-block h-100 w-100" :id="item.id" data-bs-toggle="modal"
                                         data-bs-target="#productModal" @@click="selected">
                                    <div class="carousel-caption p-0 d-md-block">
                                        <h5 >{{item.name}}</h5>
                                        <p >{{item.description}}</p>
                                    </div>
                                </div>
                                <div v-for="(item, i) in recommendHeadProd" :key="i" v-if="i==recommendHeadProd.length-1" class="carousel-item ">
                                    <img :src="item.path" class="d-block h-100 w-100" :id="item.id" data-bs-toggle="modal"
                                         data-bs-target="#productModal" @@click="selected">
                                    <div class="carousel-caption p-0 d-md-block">
                                        <h5 >{{item.name}}</h5>
                                        <p >{{item.description}}</p>
                                    </div>
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselrecommendCaptions" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselrecommendCaptions" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                        <template v-for="item in recommendBodyProd">
                            <div class="col-6 p-1">
                                <div class="card productcard w-100 h-100">
                                    <label  ><strong>{{item.discountName}}</strong></label>
                                    <img :src="item.path" class="p-2 w-100" :id="item.id" data-bs-toggle="modal"
                                         data-bs-target="#productModal" @@click="selected">
                                    <div class="card-body btnaddtocart">
                                        <div :id="item.id" data-bs-toggle="modal" data-bs-target="#productModal" @@click="selected">
                                            <p class="card-title">{{item.name}}</p>

                                            <span class="price">${{item.price}}</span>
                                            <span class="discount">${{Math.round(item.price*item.discountAmount)}}</span>
                                            <span class="sale px-2">SALE</span>
                                        </div>
                                        <div class="row justify-content-center my-2 mx-0 quantitygroup">
                                            <button type="button" @@click="minus"
                                                    class="col-2 p-0 btn btn-dark btn-sm minus-btn">
                                                <i class="fa fa-minus"></i>
                                            </button>
                                            <div class="col-8 p-0">
                                                <input type="number" :name="item.name"
                                                       class="form-control form-control-sm qty_input text-center"
                                                       value="0" readonly>
                                            </div>
                                            <button type="button" @@click="plus"
                                                    class="col-2 p-0 btn btn-dark btn-sm plus-btn">
                                                <i class="fa fa-plus"></i>
                                            </button>
                                        </div>
                                        <button type="button" class="col-12 btn" @@click="sessionStr">加到購物車</button>
                                    </div>
                                </div>
                            </div>
                        </template>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- 產品懸浮視窗Modal -->
    <div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="productModalLabel"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header selModalHead mb-2">
                    <h3 class="modal-title fw-bold ">{{productName}}</h3>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="card-body btnaddtocart">
                    <div class="px-2" >
                        <span class="price p-2 my-2">${{price}}</span>
                        <span class="discount ">${{Math.round(price*discountAmount)}}</span>
                        <span class="sale px-2 ">SALE</span>
                        <img :src="imagesrc" class="w-100 p-2 my-2" />
                        <h3 class="card-title text-center p-2 my-2">{{description}}</h3>

                    </div>
                    <div class="row justify-content-center p-2 my-2 mx-0 quantitygroup">
                        <button type="button" @@click="minus"class="col-2 p-0 btn btn-dark btn-sm minus-btn">
                            <i class="fa fa-minus"></i>
                        </button>
                        <div class="col-8 p-0">
                            <input type="number" :name="productName" :id="vueid"
                                    class="form-control form-control-sm qty_input text-center"
                                    value="0" readonly>
                        </div>
                        <button type="button" @@click="plus"
                                class="col-2 p-0 btn btn-dark btn-sm plus-btn">
                            <i class="fa fa-plus"></i>
                        </button>
                    </div>
                    <button type="button" class="col-12 btn" @@click="sessionStr" data-bs-dismiss="modal">加到購物車</button>
                </div>
            </div>
        </div>
    </div>
