<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href=" https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/vue@2.7.10/dist/vue.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>@ViewData["Title"] - Alcoholic</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Alcoholic.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" type="image/ico" href="@Url.Content("~/images/icons/logoicon-r.png")">
    <style>
        body {
            position: relative;
            background-color: #333;
        }

        /*banner*/
        .navbar {
            background-color: #721B29;
        }

        .navbar-brand {
            color: white;
        }

        .topnavbar p {
            color: aliceblue;
            margin: auto;
            text-align: start;
        }

        .navbutton {
            border-radius: 0.375rem;
            border: 0;
            background-color: #D8CDB9;
            height: 35px;
        }

        .navbarposition {
            z-index: 1;
        }

        .logo {
            width: 50px;
            margin-right: 20px;
        }

        /*導覽列*/
        .nav-pills .nav-link {
            top: 0;
            background-color: #333;
            border-radius: 0;
        }

        .nav-pills .nav-link.active,
        .nav-pills .show>.nav-link {
            background-color: #333;
            font-weight: bold;
            color: #D8CDB9;
            border-bottom: #D8CDB9 1px solid;
            border-radius: 0;
        }

        .collection {
            position: sticky;
            top: -1px;
            z-index: 1;
        }

        .collection button {
            padding: 8px;
        }

        /* 產品 */

        .signatureCT p,
        .classicCT p,
        .recommendedCT p,
        .customizedCT p {
            font-size: small;
            height: 40px;
        }

        .price {
            color: #333;
            text-decoration: line-through;
        }

        .discount {
            color: red;
            font-weight: bold;
        }

        .sale {
            border: 1px solid red;
            font-size: small;
            float: right;
            color: red;
        }

        .minus-btn,
        .plus-btn {
            background-color: white;
            color: #D8CDB9;
            border: 0;
            border-radius: 0;
        }

        .minus-btn:hover,
        .plus-btn:hover {
            background-color: #C28C2E;
            color: white;
        }

        .qty_input {
            color: #333;
            border: 0;
        }

        .quantitygroup {
            border: #D8CDB9 solid 1px;
        }

        .btnaddtocart {
            background-color: #721B29;
            color: white;
            border: 0;
        }

        /* 算命 */
        .fate {
            position: fixed;
            right: 0px;
            top: 20vh;
            width: 10vw;
            max-width: 100px;
            z-index: 2;
            display: inline;
        }

        /* 購物車 */
        .cart {
            border-top: 1px solid #D8CDB9;
            background-color: #222220;
            height: 70px;
            width: 100%;
            position: sticky;
            bottom: -1px;
        }

        .btncheckcart {
            text-align: center;
            background-color: #721B29;
            border-radius: 0.375rem;
            color: aliceblue;
        }

        /*model*/
        .btncartbackgroundcolor {
            color: white;
            width: 100%;
        }

        .modal-image {
            max-height: 280px;
        }

        .modal-spec {
            overflow-y: auto;
            max-height: 20vh;
        }

        .modal-bodyimg {
            text-align: center;
        }

        .modal-footer {
            background-color: #721B29;
        }

        /* 客製化 */
        .modalbody {
            background-color: #333;
        }

        .modal-bodycolor {
            background-color: #D8CDB9;
        }

        .modalinput {
            border: 0;
        }

        .modal-headerclose {
            text-align: end;
        }

        .modal-headbackgroundcolor {
            background-color: #721B29;
            color: white;
        }
    </style>
    <title>Document</title>
</head>

<body>
    <div id="vueproductModal">
        <!-- banner -->
        <div class="topnavbar">
            <nav class="navbar navbar-expand-lg navbarposition">
                <div class="container-fluid">
                    <img src="Images/icons/logo-w.png" alt="" class="logo">
                    <p>桌次 <span>{{tableid}}</span></p>
                    <button class="navbutton px-3"><i class="fa-solid fa-user"> 訪客登入</i></button>
                </div>
            </nav>
        </div>
        <!-- 導覽列(sticky) -->
        <div class="collection container">
            <ul class="nav nav-justified mt-3 nav-pills" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="signatureCT-tab" data-bs-toggle="tab"
                        data-bs-target="#signatureCT" type="button" role="tab" aria-controls="signatureCT"
                        aria-selected="true">特色調酒</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="classicCT-tab" data-bs-toggle="tab" data-bs-target="#classicCT"
                        type="button" role="tab" aria-controls="classicCT" aria-selected="false">經典調酒</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="recommendedCT-tab" data-bs-toggle="tab" data-bs-target="#recommendedCT"
                        type="button" role="tab" aria-controls="recommendedCT" aria-selected="false">推薦調酒</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="tabbtn nav-link" id="customizedCT-tab" type="button" role="tab" @@click="resetoptions"
                        data-bs-toggle="modal" href="#optionModalToggle">客製化<i
                            class="fa-solid fa-clipboard-question"></i></button>
                </li>
            </ul>
        </div>
        <!-- 算命 -->
        <div class="divfate">
            <img class="fate" src="~/images/Cocktails/fate.png">
        </div>
        <!-- 菜單 -->
        <div class="menu">
            <div class="tab-content">
                <!-- 特色調酒 -->
                <div class="tab-pane active" id="signatureCT" role="tabpanel" aria-labelledby="signatureCT-tab"
