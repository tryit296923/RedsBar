<script>
    var app = new Vue({
        el: '#vueproductModal',
        data: {
            vueid: "",
            imagesrc: "",
            productName: "",
            discount: "",
            description: "",
            price: "",
            discountAmount: "",
            recommendHeadProd:[],
            recommendBodyProd:[],
