            customize:52,
            fateResult:{id:"",productName:"",description:"",imagesrc:""},
            optionsFateForm: { id:"" , name: "", price:"" , description: "", path: "", discountId:"" , discountName: "", discountAmount:"" },
            optionsection1: [
                { base: 'Vodka' }, { base: 'Rum' }, { base: 'Tequila' }, { base: 'Whiskey' }, { base: 'Gin' }, { base: 'Brandy' }
            ],
            optionsection2: [
                { smell: '花草香' }, { smell: '果實香' }, { smell: '木質調' }, { smell: '煙燻' }, { smell: '茶香' }
            ],
            optionsection3: [
                { taste: '水果酸' }, { taste: '螞蟻甜' }, { taste: '大地風土' }
            ],
            optionsection4: [
                { body: '無感' }, { body: '中等' }, { body: '厚重' }
            ],
            optionFatesection1: [
                { opt: '一位而已' }, { opt: '和朋友兩三人' }
            ],
            optionFatesection2: [
                { opt: '沙發座位區' }, { opt: '吧檯高腳椅' }, { opt: '好友一大群' }
            ],
            optionFatesection3: [
                { id:1,opt: '想喝純的威士忌' }, { id:2, opt: '來杯調酒吧!' }
            ],
            optionFatesection4A: [
                {id:1, opt: '萬人迷的我，就像自帶蜜餞與梅子的馥郁香氣' }, 
                {id:2, opt: '我圓滑的談吐，散發出辛香料與蜂蜜果香' }, 
                {id:3, opt: '看似穩重的我，有一種橡木與蘋果肉桂的香氣' }
            ],
            optionFatesection4B: [
                { id: 4, opt: '爽朗的我，氣質有如一種清新的鮮甜果香' },
                { id: 5, opt: '我的優雅風格，像揉合了甜美的蜜餞與誘人的梅子香' },
            ],
            optionFatesection5: [
                { opt: '超Chill的慵懶爵士樂' }, { opt: '狂放嘶吼的重金搖滾' }, { opt: '懷舊老歌絕不出錯' }, { opt: '電音舞曲Party Time！' }
            ],
            // 產品資料
            product: []
        },
        methods: {
            selected: function (e) {
                //將點選的資料帶入到modal畫面
                for (i = 0; i < this.product.length; i++) {
                    if (e.currentTarget.id == this.product[i].id) {
                        this.vueid = e.currentTarget.id;
                        this.imagesrc = this.product[i].path;
                        this.productName = this.product[i].name;
                        this.description = this.product[i].description;
                        this.price = this.product[i].price,
                            this.discountAmount = this.product[i].discountAmount
                    }
                }
            },
            plus: function (e) {
                if (e.currentTarget.parentElement.children[1].children[0].value < 10) {
                    e.currentTarget.parentElement.children[1].children[0].value = e.currentTarget.parentElement.children[1].children[0].value * 1 + 1
                } else {
                    e.currentTarget.parentElement.children[1].children[0].value = 10
                }
            },
            minus: function (e) {
                if (e.currentTarget.parentElement.children[1].children[0].value > 0) {
                    e.currentTarget.parentElement.children[1].children[0].value -= 1
                } else {
                    e.currentTarget.parentElement.children[1].children[0].value = 0
                }
            },
            resetoptions: function () {
                this.optionsform = [];
            },
            resetFateoptions: function () {
                this.optionsFateForm = "";
            },
            optionselected: function (e) {
                this.optionsform = this.optionsform.concat(e.target.value);

            },
            optionFateSelected: function (e) {
                //將點選的資料帶入到modal畫面
                for (i = 0; i < this.product.length; i++) {
                    if (e.currentTarget.id == this.product[i].id) {
                        this.fateResult.id = e.currentTarget.id;
                        this.fateResult.imagesrc = this.product[i].path;
                        this.fateResult.productName = this.product[i].name;
                        this.fateResult.description = this.product[i].description;
                    }
                }

            },
            checkCart: function (e) {
                fetch("/Order/AddToCart", {
                    method: 'POST',
                    headers: { "Content-Type": "application/json" },
                    body: this.cartStr,
                })
                    .then((e) => e.text())
                    .then((result) => {
                        if (result) {
                            window.location.href = "/Order/Cart"
                        }
                    }).catch(error => console.log(error))
                this.cartArray = [];
                this.cartStr = "";
            },
            sessionStr: function (e) {
                if(e.target.id ==52){
                    selProd = e.target
                }
                else{
                var selProd = e.target.parentElement.children[1].children[1].children[0];

                }
                if (selProd.value > 0) {
                    var item = {
                        id: selProd.id,
                    };
                    for (i = 0; i < this.cartArray.length + 1; i++) {
                        //初始化
                        if (i == 0 && this.cartArray.length < 1) {
                            item.qty = selProd.value
                            this.cartArray.push(item);
                            this.cartStr = JSON.stringify(this.cartArray);
                            break;
                        }
                        //已添加至購物車
                        else if (item.id == this.cartArray[i].id) {
                            item.qty = selProd.value;
                            this.cartArray[i].qty = (this.cartArray[i].qty * 1 + item.qty * 1).toString();
                            this.cartStr = JSON.stringify(this.cartArray);
                            break;
                        }
                        //找完陣列且尚未添加至購物車
                        else if (item.id != this.cartArray[i].id && i == this.cartArray.length - 1) {
                            item.qty = selProd.value;
                            this.cartArray.push(item);
                            this.cartStr = JSON.stringify(this.cartArray);
                            break;
                        }
                    }
                    const Toast = Swal.mixin({
                        toast: true,
                        position: 'top-end',
                        showConfirmButton: false,
                        timer: 2000,
                        timerProgressBar: true,
                        didOpen: (toast) => {
                            toast.addEventListener('mouseenter', Swal.stopTimer)
                            toast.addEventListener('mouseleave', Swal.resumeTimer)
                        }
                    })
                    Toast.fire({
                        icon: 'success',
                        title: '添加成功',
                        text: selProd.name + "*" +selProd.value 
                    })
                    if (selProd.id != 52){
                    selProd.value = 0;
                    }
                }
            }

        },
        created: function () {
