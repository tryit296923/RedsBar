@{
    ViewData["Title"] = "今日消費結算";
    Layout = "_LayoutMobile";
}

<style>
    body {
        background-color: #222220;
    }

    .colorbox {
        background-color: #D8CDB9;
        display: flex;
        justify-content: center;
        text-align: center;
        border-radius: 0.375rem;
        color: #222220;
        font-weight: bold;
        align-items: center;
        margin-bottom: 30px;
        margin-top: 50px;
    }

    .thankmessage {
        font-size: xx-large;
        margin-bottom: 0px;
        height: 75px;
        line-height: 75px;
    }

    .detailbox {
        color: white;
    }

    .checkdetail {
        border: 1px solid #D8CDB9;
        border-radius: 0.375rem;
        padding: 20px 12px 20px 12px !important;
    }

        .checkdetail p {
            margin-bottom: 0px;
        }

    .checkinfotext {
        font-size: larger;
    }

    .checkinfotitle {
        font-weight: bold;
    }

    .total {
        font-size: x-large;
        margin-bottom: 0px;
        height: 70px;
    }

    .paymentway {
        width: 100%;
        position: sticky;
        bottom: 0%;
        background-color: #222220;
        height: 4rem;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 20px;
    }

    .btnonlinepay {
        background-color: #D8CDB9;
        border: none;
        height: 40px;
        color: #222220;
        border-radius: 0.375rem;
        font-weight: bold;
    }

        .btnonlinepay:active {
            background-color: #C28C2E;
            color: white;
        }

    .btnfrontdesk {
        background-color: #721B29;
        color: white;
        border: none;
        height: 40px;
        border-radius: 0.375rem;
        font-weight: bold;
    }

        .btnfrontdesk:active {
            background-color: #C28C2E;
        }
</style>

<div class="container">
    <div class="row">
        <!-- 標題 -->
        <div class="container-fluid colorbox py-2 col-10 col-xl-8 text-center">
            <div class="thankmessage">謝謝您的光臨!</div>
        </div>
        <br>
        <div class="detailbox container-fluid col-10 col-xl-8 px-0">
            <!-- 訂單簡單資訊 -->
            <div class="checkdetail text-center py-2">
                <p class="checkinfotext checkinfotitle">今日消費資訊:</p>
                <hr>
                <p class="checkinfotext orderdate">消費日期: 2022年3月29日 星期四</p>
                <hr>
                <p class="checkinfotext tablenum">桌號: 8</p>
                <p class="checkinfotext custnum">用餐人數: 4 人</p>
                <hr>
                <p class="colorbox total mt-0">今日消費總計: XXX 元</p>
            </div>

            <!-- 底部選單按鈕 -->
            <div class="paymentway">
                <div class="container row w-100 px-0">
                    <div class="col col-xl-6 text-center">
                        <button type="button" class="btnonlinepay w-100 py-2">
                            線上支付
                        </button>
                    </div>
                    <div class="col col-xl-6 text-center">
                        <button type="button" class="btnfrontdesk w-100 py-2">
                            櫃台結帳
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
