@{
    ViewData["Title"] = "今日消費結算";
    Layout = "_LayoutMobile";
}

<style>
    body {
        background-color: #222220;
    }

    .colorbox {
        background-color: #D8CDB9;
        display: flex;
        justify-content: center;
        text-align: center;
        border-radius: 0.375rem;
        color: #222220;
        font-weight: bold;
        align-items: center;
        margin-bottom: 30px;
        margin-top: 50px;
    }

    .thankmessage {
        font-size: xx-large;
        margin-bottom: 0px;
        height: 75px;
        line-height: 75px;
    }

    .detailbox {
        color: white;
    }

    .checkdetail {
        border: 1px solid #D8CDB9;
        border-radius: 0.375rem;
        
    }

    .checkdetail p {
        margin-bottom: 0px;
    }

    .checkinfotext {
        font-size: larger;
    }

    ul {
        padding-left: 20px;
    }

    .orderDetail{
        display:flex;
        justify-content:space-between;
        font-size:large;
    }

    .total {
        font-size: x-large;
        margin-bottom: 0px;
        height: 70px;
    }

    .paymentway {
        width: 100%;
        position: sticky;
        bottom: 0%;
        background-color: #222220;
        height: 4rem;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 20px;
        font-size:large;
    }

    .btnonlinepay {
        background-color: #D8CDB9;
        border: none;
        height: 40px;
        color: #222220;
        border-radius: 0.375rem;
        font-weight: bold;
    }

    .btnonlinepay:active {
        background-color: #C28C2E;
        color: white;
    }

    .btnfrontdesk {
        background-color: #721B29;
        color: white;
        border: none;
        height: 40px;
        border-radius: 0.375rem;
        font-weight: bold;
    }

    .btnfrontdesk:active {
        background-color: #C28C2E;
    }

    .modal-content{
        color:black;
    }

    .modal-footer{
        justify-content:center;
    }

    .btnpaymentinstrument{
        display:flex;
        justify-content:center;
    }
    
    .paybycreditcard{
        font-size:x-large;
    }
    
    .icon{
        display:flex;
        align-items:center;
    }
</style>

<div class="container">
    <div class="row">
        <!-- 標題 -->
        <div class="container-fluid colorbox py-2 col-10 col-xl-8 text-center">
            <div class="thankmessage">本日消費明細</div>
        </div>
        <br>
        <div class="detailbox container-fluid col-10 col-xl-8 px-0">
            <!-- 訂單簡單資訊 -->
            <div class="checkdetail p-3">
                <div class="px-3">
                <p class="checkinfotext ordertime">日期 : @ViewBag.orderTime</p>
                <p class="checkinfotext tablenum">桌號 : </p>
                <p class="checkinfotext custnum">用餐人數 :  人</p>
                </div>
                <hr>
                <ul>
                    <li class="orderDetail">
                        <span>商品名稱</span>
                        <span class="pe-3">2</span>
                    </li>
                </ul>
                <hr>
                <p class="colorbox total mt-0">今日消費總計 : XXX 元</p>
            </div>

            <!-- 底部選單按鈕 -->
            <div class="paymentway">
                <div class="container row w-100 px-0">
                    <div class="col col-xl-6 text-center">
                        <button type="button" class="btnonlinepay w-100 py-2"data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                            線上支付
                        </button>
                    </div>
                    <div class="col col-xl-6 text-center">
                        <button type="button" class="btnfrontdesk w-100 py-2">
                            櫃台結帳
                        </button>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="staticBackdropLabel">請選擇線上支付工具</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-footer row">
                            <div class="col-12">
                                <a href="" class="btn btnpaymentinstrument paybycreditcard">
                                <i class="fa-solid fa-credit-card icon"></i>
                                    &nbsp信用卡支付
                            </a>
                            </div>
                            <div class="col-12">
                            <a href="" class="btn btnpaymentinstrument"><img src="~/images/icons/googlepay.jpg" class="w-50"/></a>
                            </div>
                                <div class="col-12">
                                <a href="" class="btn btnpaymentinstrument"><img src="/images/icons/LINE-Pay(h)_W119_n.png" class="" /></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
