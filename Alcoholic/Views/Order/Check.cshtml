@model Alcoholic.Models.DTO.OrderCheckViewModel
@{
    ViewData["Title"] = "今日消費結算";
    Layout = "_LayoutMobile";
}

<style>
    body {
        background-color: #222220;
    }

    .colorbox {
        background-color: #D8CDB9;
        display: flex;
        justify-content: center;
        text-align: center;
        border-radius: 0.375rem;
        color: #222220;
        font-weight: bold;
        align-items: center;
        margin-bottom: 30px;
        margin-top: 50px;
    }

    .thankmessage {
        font-size: xx-large;
        margin-bottom: 0px;
        height: 75px;
        line-height: 75px;
    }

    .detailbox {
        color: white;
    }

    .checkdetail {
        border: 1px solid #D8CDB9;
        border-radius: 0.375rem;
    }

        .checkdetail p {
            margin-bottom: 0px;
        }

    .checkinfotext {
        font-size: larger;
    }

    .orderDetail {
        display: flex;
        justify-content: space-between;
        font-size: large;
    }

    .orderDetailTitle {
        font-weight: bold;
    }

    .total {
        font-size: x-large;
        margin-bottom: 0px;
        height: 70px;
    }

    .paymentway {
        width: 100%;
        position: sticky;
        bottom: 0%;
        background-color: #222220;
        height: 4rem;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 20px;
        font-size: large;
    }

    .btnonlinepay {
        background-color: #D8CDB9;
        border: none;
        height: 40px;
        color: #222220;
        border-radius: 0.375rem;
        font-weight: bold;
    }

        .btnonlinepay:active {
            background-color: #C28C2E;
            color: white;
        }

    .btnfrontdesk {
        background-color: #721B29;
        color: white;
        border: none;
        height: 40px;
        border-radius: 0.375rem;
        font-weight: bold;
    }

        .btnfrontdesk:active {
            background-color: #C28C2E;
        }

    .modal-content {
        color: black;
    }

    .modal-footer {
        justify-content: center;
    }

    .btnpaymentinstrument {
        display: flex;
        justify-content: center;
    }

    .paybycreditcard {
        font-size: x-large;
    }

    .icon {
        display: flex;
        align-items: center;
    }
</style>

<div class="container">
    <div class="row" id="orderCheck">
        <!-- 標題 -->
        <div class="container-fluid colorbox py-2 col-10 col-xl-8 text-center">
            <div class="thankmessage">消費明細</div>
        </div>
        <br>
        <div class="detailbox container-fluid col-10 col-xl-8 px-0">
            <!-- 訂單簡單資訊 -->
            <div class="checkdetail p-3">
                <div class="px-3">
                    <p class="checkinfotext ordertime">日期 : @Model.OrderTime</p>
                    <p class="checkinfotext tablenum">桌號 : @Model.Desk</p>
                    <p class="checkinfotext custnum">用餐人數 : @Model.Number 人</p>
                    <p class="checkinfotext custnum">訂單編號 : @Model.OrderId</p>
                </div>
                <hr>
                <ul class="px-3">
                    <li class="orderDetail orderDetailTitle row">
                        <span class="col-7">商品名</span>
                        <span class="col-3 text-center">數量</span>
                        <hr>
                    </li>
                    <li class="orderDetail row" v-for="items in orderCheckViewModel.cartTotal">
                        <span class="col-7">{{items.productName}}</span>
                        <span class="pe-3 col-3 text-center">{{items.quantity}}</span>
                    </li>
                </ul>
                <hr>
                <p class="colorbox total mt-0">今日消費總計 : @Model.Total 元</p>
            </div>
            <form action="FrontDeskCheckout" method="post" class="d-none" id="cart">
                <button type="submit" ref="frontDeskCheckout"></button>
            </form>
            <!-- 底部選單按鈕 -->
            <div class="paymentway">
                <div class="container row w-100 px-0">
                    <div class="col col-xl-6 text-center">
                        <button type="button" class="btnonlinepay w-100 py-2" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                            線上支付
                        </button>
                    </div>
                    <div class="col col-xl-6 text-center">
                        <button type="button" class="btnfrontdesk w-100 py-2" v-on:click="frontDeskCheckout">
                            櫃台結帳
                        </button>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="staticBackdropLabel">請選擇線上支付工具</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-footer row">
                            <div class="col-12">
                                <a v-on:click.prevent="pay('credit')" class="btn btnpaymentinstrument paybycreditcard">
                                    <i class="fa-solid fa-credit-card icon"></i>
                                    &nbsp信用卡支付
                                </a>
                            </div>
                            <div class="col-12 w-50">
                                <a v-on:click.prevent="pay('googlepay')" class="btn btnpaymentinstrument"><img src="~/images/icons/googlepay.jpg" class="w-50" /></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var app = new Vue({
        el: "#orderCheck",
        data() {
            return {
                orderCheckViewModel: @Html.Raw(Json.Serialize(Model)),
            }
        },
        methods: {
            pay: function (paytype) {
                fetch("/api/Order/Payment", {
                    body: JSON.stringify({ OrderId: "@Model.OrderId" , PayType: paytype }),
                    headers: { 'content-type': 'application/json' },
                    method: "POST"
                })
                .then(response => response.json())
                .then(result => {
                    console.log(result);
                    var form = document.createElement("form");
                    form.method = 'post';
                    form.action = "https://ccore.newebpay.com/MPG/mpg_gateway";
                    Object.entries(result).forEach(x => {
                        var inp = document.createElement("input");
                        inp.value = x[1];
                        inp.name = x[0].charAt(0).toUpperCase() + x[0].slice(1);
                        inp.type = "hidden";
                        form.append(inp);
                    });
                    window.document.body.appendChild(form);
                    form.submit();
                })
            },
            frontDeskCheckout:function(){
                this.$refs.frontDeskCheckout.click();
            }
        }
    })
</script>