@{
    ViewData["Title"] = "購物車";
    Layout = "_LayoutMobile";
}

<style>
    body {
        background-color: #222220;
    }

    .backColor {
        background-color: #222220;
    }

    .outer {
        width: 100%;
        height: 7vh;
    }

    .navbar {
        background-color: #721B29;
    }

    .navbar-brand {
        color: white;
    }

    .nav-link {
        color: white;
    }

    a {
        color: aliceblue;
        text-decoration: none;
    }

    .navbarposition {
        z-index: 1;
    }

    .search {
        height: 38px;
        margin: 10px;
        position: relative;
    }

        .search img {
            height: 20px;
            width: 20px;
            position: absolute;
            top: 9px;
            right: 9px;
        }

    .searcharea2 {
        display: none;
    }

    @@media screen and (max-width: 992px) {
        .searcharea {
            display: none !important;
        }

        .searcharea2 {
            display: block;
        }
    }

    .scrollregion {
        overflow-y: scroll;
        height: 86vh;
        overflow-x: hidden;
    }

    .img-box img {
        filter: blur(1.5px);
        padding: 20px 0;
    }

    .userarea {
        position: relative;
        top: -1.5vh;
    }

    .title {
        color: white;
        position: absolute;
        top: 0px;
    }

        .title p {
            display: inline;
        }

    .himessage {
        text-align: end;
        padding-right: 12%;
    }

    .user {
        color: white;
        text-align: right;
    }

    fieldset {
        font-family: sans-serif;
        border: 3px solid #D8CDB9;
        background: white;
        border-radius: 0.375rem;
        padding: 15px;
    }

        fieldset legend {
            background: #C28C2E;
            color: white;
            font-size: 20px;
            border-radius: 0.375rem;
            box-shadow: 0 0 0 3px #D8CDB9;
            width: 40%;
            height: 50px;
            margin-left: 5%;
            float: none;
            display: flex;
            justify-content: center;
            align-items: center;
        }

    .cartList {
        background-color: white;
        border-radius: 0.375rem;
    }

    .list-group-item,
    .cartTotal {
        color: #222220;
    }

    .productName {
        font-size: larger;
    }

    .originalPrice {
        text-decoration: line-through;
    }

    .discountPrice {
        color: darkred;
    }

    .btnDelete {
        border: none;
        border-radius: 0.25em;
        font-size: larger;
    }

        .btnDelete:active {
            background-color: #721B29;
            color: white;
        }

    .btnCount {
        border: none;
        background-color: transparent;
        border-radius: 0.25em;
    }

        .btnCount:active {
            background-color: #D8CDB9;
        }

    .align-items-start {
        display: flex !important;
        align-items: center !important;
    }

    .cartTotal {
        text-align-last: center;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 20px;
        font-weight: bold;
    }

    .orderCheck {
        width: 100%;
        position: sticky;
        bottom: 0%;
        background-color: #222220;
        height: 7vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: large;
    }

    .bottombtntext {
        border: none;
        border-radius: 0.375rem;
        font-weight: bold;
    }

    .btnBacktoMenu,
    .btnModalCancel {
        background-color: #D8CDB9;
        color: #222220;
    }

        .btnBacktoMenu:active,
        .btnModalCancel:active {
            background-color: #C28C2E;
            color: white;
        }

    .btnCartConfirm,
    .btnModalConfirm {
        background-color: #721B29;
        color: white;
    }

        .btnCartConfirm:active,
        .btnModalConfirm:active {
            background-color: #C28C2E;
        }

    .btnInModal {
        border: none;
        border-radius: 0.375rem;
        width: 90px;
        display: flex;
        justify-content: center;
        height: 30px;
        align-items: center;
    }

    a:active {
        color: white;
    }

</style>
<div id="cartList">
    <div class="outer">
        <!-- navbar -->
        <div class="topnavbar">
            <nav class="navbar navbar-expand-lg navbarposition">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">店家名稱</a>
                    <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <form class="searcharea2 search" role="search">
                                <input class="form-control" type="search" placeholder="Search" aria-label="Search">
                                <a href=""><img src="/images/icons/search.png" alt=""></a>
                            </form>
                            <li class="nav-item">
                                <a class="nav-link" href="#">推薦</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">經典酒款</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">算命調酒</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">線上訂位</a>
                            </li>
                        </ul>
                        <form class="d-flex searcharea search" role="search">
                            <input class=" form-control" type="search" placeholder="Search" aria-label="Search">
                            <a href=""><img src="/images/icons/search.png" alt=""></a>
                        </form>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <div class="scrollregion">
        <div>
            <!-- banner -->
            <div class="backColor container-fluid mb-3">
                <div class="img-box">
                    <img src="https://picsum.photos/id/24/1200/300" class="img-fluid w-100" />
                </div>
            </div>
            <!-- 標題 -->
            <div class="container col userarea">
                <div class="title w-100">
                    <div class="himessage">
                        <p>Hi, </p>
                        <p class="user">XXX</p>
                    </div>
                </div>
            </div>
        </div>


        <fieldset class="mx-3">
            <legend>
                <div>
                    <i class="fa-sharp fa-solid fa-cart-shopping me-2"></i>
                </div>
                <b>購物車</b>
            </legend>
            <!-- 購物車清單 -->
            <div class="container-fluid">
                <div class="cartList" v-for="(item,index) in itemList" v-bind:key="item.id">
                    <ol class="list-group">
                        <li class="row list-group-item d-flex justify-content-between align-items-start">
                            <div class="col-3 px-0">
                                <img src="https://picsum.photos/id/684/600/600" class="w-100 rounded">
                            </div>
                            <div class="col-5 px-0">
                                <div class="ms-2 me-auto">
                                    <div class="fw-bold productName">{{item.name}}</div>
                                    <div>描述</div>
                                    <div v-if="item.discount != 1">
                                        <span>$ </span>
                                        <span class="originalPrice">{{item.price * item.count}} </span>
                                        <span class="discountPrice" name="finalPrice">{{discountPrice(item)}}</span>
                                    </div>
                                    <div v-else>
                                        <span>$ </span>
                                        <span name="finalPrice">{{item.price * item.count}} </span>
                                    </div>
                                </div>
                            </div>
                            <div class="row col-4 px-0">
                                <div class="col-6 text-center px-0">
                                    <button class="btnCount" v-on:click="increase(item)">▲</button>
                                    <div>{{item.count}}</div>
                                    <button class="btnCount" v-on:click="decrease(item)">▼</button>
                                </div>
                                <div class="col-6 text-center d-flex align-items-center justify-content-center">
                                    <div>
                                        <button class="btnDelete" v-on:click="deleteItem(index)">X</button>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ol>
                </div>
                <form action="Success" method="post" class="d-none">
                    <input name="orderDate" v-model="orderDate"/>
                    <button type="submit" ref="orderingSend"></button>
                </form>
            </div>
            <hr>
            <div class="cartTotal">此筆訂單總額: {{cartTotal()}} 元</div>
        </fieldset>
    </div>

    <!-- 底部按鈕 -->
    <div class="orderCheck">
        <div class="container row w-100">
            <div class="col col-xl-6 text-center">
                <button type="button" class="bottombtntext btnBacktoMenu w-100 py-2">
                    繼續點餐
                </button>
            </div>
            <div class="col col-xl-6 text-center">
                <button type="button" class="bottombtntext btnCartConfirm w-100 py-2" data-bs-toggle="modal"
                        data-bs-target="#delieveBackdrop">
                    送出訂單
                </button>
            </div>
        </div>
    </div>



    <!-- Modal -->
    <div class="modal fade" id="delieveBackdrop" data-bs-backdrop="delieve" data-bs-keyboard="false" tabindex="-1"
         aria-labelledby="delieveBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="delieveBackdropLabel">訂單送出提示</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    確認訂單無誤並送出?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btnInModal btnModalCancel" data-bs-dismiss="modal">取消</button>
                    <button class="btnInModal btnModalConfirm" v-on:click="orderingSend()">確認送出</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var app = new Vue({
        el: '#cartList',
        data: {
            orderDate: '',
            itemList: [
                {
                    id: '1',
                    imgUrl: '',
                    name: '蘭姆酒',
                    itemDescript: '',
                    price: '250',
                    count: '1',
                    discount: '0.8',
                },
                {
                    id: '2',
                    imgUrl: '',
                    name: '長島冰茶',
                    itemDescript: '',
                    price: '350',
                    count: '1',
                    discount: '1',
                },
                {
                    id: '3',
                    imgUrl: '',
                    name: '紅酒',
                    itemDescript: '',
                    price: '300',
                    count: '1',
                    discount: '1',
                },
                {
                    id: '4',
                    imgUrl: '',
                    name: '白酒',
                    itemDescript: '',
                    price: '250',
                    count: '1',
                    discount: '0.95',
                },
                {
                    id: '5',
                    imgUrl: '',
                    name: '威士忌',
                    itemDescript: '',
                    price: '300',
                    count: '1',
                    discount: '0.9',
                },
            ]
        },
        methods: {
            decrease: function (item) {
                console.log(item);
                if (item.count > 1) {
                    item.count--;
                }
            },
            increase: function (item) {
                console.log(item);
                item.count++;
            },
            deleteItem: function (index) {
                this.itemList.splice(index, 1);
            },
            discountPrice: function (item) {
                return Math.round(item.price * item.count * item.discount);
            },
            cartTotal: function () {
                var totalprice = 0;
                for (let i = 0; i < this.itemList.length; i++) {
                    totalprice += this.itemList[i].price * this.itemList[i].count * this.itemList[i].discount;
                }
                return Math.round(totalprice);
            },
            orderingSend: function () {
                //console.log('orderingsend');
                this.$refs.orderingSend.click();
            },

        },
    })
</script>
