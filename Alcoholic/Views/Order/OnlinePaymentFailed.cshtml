@{
    ViewData["Title"] = "付款失敗頁面";
    Layout = "_LayoutMobile";
}

<style>
    body {
        background-color: #222220;
    }

    .colorbox {
        background-color: #D8CDB9;
        display: flex;
        justify-content: center;
        text-align: center;
        border-radius: 0.375rem;
        color: #222220;
        font-weight: bold;
        align-items: center;
        margin-bottom: 20px;
        margin-top: 50px;
    }

    .messageBox {
        border: 1px solid #D8CDB9;
        border-radius: 0.375rem;
        padding: 20px 12px 20px 12px !important;
    }

    .detailFontColor {
        color: white;
    }

    .thanksMessage {
        font-size: xx-large;
    }

    .orderId {
        font-size: large;
    }

    .successedmessage {
        font-size: x-large;
        margin-bottom: 0px;
        height: 60px;
        line-height: 60px;
        margin-top: 20px;
    }

    .logopic {
        display: flex;
        align-content: center;
        justify-content: center;
        width: 150px;
        height: 150px;
    }
</style>

<div class="container" id="op_Succeed">
    <div class="row">
        <div class="container-fluid logopic col-10 col-xl-8 align-self-center mt-5 mb-3 w-100">
            <img src="/images/icons/logo-w.png" alt="">
        </div>
        <div class="container-fluid col-10 col-xl-8 detailFontColor text-center my-3 thanksMessage">--請洽櫃台服務人員--</div>
        <div class="container-fluid messageBox col-10 col-xl-8 px-0 text-center">
            <div class="detailFontColor orderId">訂單編號 : @ViewBag.orderId</div>
            <div class="successedmessage container-fluid colorbox py-2 col-10 col-xl-8 text-center">
                <i class="fa-sharp fa-solid fa-check"></i> 付款失敗
            </div>
        </div>
    </div>
</div>