@{
    ViewData["Title"] = "密碼更新成功";
    Layout = "_LayOut";
}
<style>
    * {
        margin: 0;
        padding: 0;
    }

    body {
        width: 100%;
        background-color: #333;
    }

    .Success {
        position: relative;
        height: 80vh;
    }

    .container footright {
        height: 5vh;
    }

        .Success > img {
            width: 100%;
            height: 100%;
            vertical-align: bottom;
            position: absolute;
            z-index: -1;
        }

    .Successlogo {
        display: flex;
        justify-content: center;
        width: 100%;
    }

        .Successlogo > img {
            margin: 18vh auto 0 auto;
        }

    .text {
        color: #FFF;
        width: 100%;
        display: flex;
        justify-content: center;
        flex-direction: column;
    }

    .text h3,.text p,.text a{
        width: 100%;
        display: flex;
        justify-content: center;
    }
    .text a{
        margin: 10px 0;
    }

    h3 {
        font-size: 2rem;
    }

    p {
        font-size: 1.2rem;
    }
</style>
<div class="Success">
    <img src="~/images/BackGround/FotoJet.jpg" />
    <div class="Successlogo">
        <img src="~/images/icons/logo-y.png" />
    </div>
    <div class="text">
        <h3>密碼更新完成!</h3>
        <a href="/member/loginregister">點擊此處回登入頁面</a>
        <p>Reds'Bar歡迎您</p>
    </div>
</div>