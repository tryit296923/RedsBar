
@{
    ViewData["Title"] = "RePass";
}

<style>
    * {
        margin: 0;
        padding: 0;
    }

    body {
        width: 100%;
        background-color: #333;
    }

    .Success {
        height: 85vh;
        position: relative;
    }

        .Success > img {
            width: 100%;
            height: 100%;
            vertical-align: bottom;
            position: absolute;
            z-index: -1;
        }

    .Successlogo {
        display: flex;
        justify-content: center;
        width: 100%;
        height: 60vh;
    }

        .Successlogo > img {
            margin: 18vh auto 0 auto;
        }

    .text {
        color: #FFF;
        width: 100%;
        display: flex;
        justify-content: center;
        flex-direction: column;
    }

    h3 {
        font-size: 2rem;
        margin: 0 auto;
    }
    .form form{
        display: flex;
        justify-content: center;
        width: 100%;
    }
    .form form input{
        width: 70%;
        padding: 4px;
        margin: 4px;
    }
</style>
<div class="Success">
    <img src="~/images/BackGround/FotoJet.jpg" />
    <div class="Successlogo">
        <img src="~/images/icons/logo-y.png" />
    </div>
    <div class="text">
        <h3>請輸入您的信箱</h3>
    </div>
    <div class="form">
        <form>
            <input type="text"/><button action="">送出</button>
        </form>
    </div>
</div>

