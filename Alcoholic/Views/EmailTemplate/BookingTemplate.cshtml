@model Alcoholic.Models.DTO.BookingModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>訂位信件頁面</title>
</head>

<body>
    <div style="width:500px;background-color: #222220; color: white; height:80vh;justify-content: center;">
        <div style="padding:30px;">
            <div style="
            font-size: xx-large;
            background-color: #D8CDB9;
            height: 5rem;
            line-height:5rem;
            border-radius: 0.375rem;
            color: #222220;
            font-weight: bold;text-align: center;">
                <p style="
                justify-content: center;
                align-items: center;
                text-align: center;
                align-content:center;">
                    您已訂位成功 !
                </p>
            </div>
            <p style="text-align:center; font-size: 20px;">您的訂位資訊如下 : </p>
            <div>
                <div style="
                border: 1px solid #D8CDB9;
                border-radius: 0.375rem;
                padding:20px;">
                    <p style="
                    font-size: xx-large;
                    justify-content: center;
                    text-align:center;
                    align-items: center;
                    margin-bottom: 20px;
                    margin-top: 10px;
                    color: white;">Reds Bar</p>
                    <hr>
                    <div style="font-size: large;text-align: center; color: white;">
                        <p>台北市中正區濟南路一段321號</p>
                        <p>02-3322-1368</p>
                    </div>
                    <hr>
                    <p style="font-size: large;color: white;text-align: center;">訂位大名 : @Model.ReserveName</p>
                    <p style="font-size: large;color: white;text-align: center;">訂位日期 : @Model.ReserveDate.ToString("yyyy-MM-dd") @Model.ReserveDate.ToString("dddd")</p>
                    <p style="font-size: large;color: white;text-align: center;">預約人數 : @Model.Number 人</p>
                </div>
            </div>
            <p style="color: darkgray; text-align: center;">* 此郵件由系統自動發出，請勿自動回覆。</p>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js
    "></script>
</body>
<script>

</script>

</html>