@{
    Layout=null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/theme.css" rel="stylesheet" />
    <link rel="shortcut icon" type="image/ico" href="@Url.Content("~/images/icons/logoicon-r.png")">
    <script src="https://cdn.jsdelivr.net/npm/vue@2.7.10"></script>
    <title>Red's Bar'</title>
    <style>
        body{
            color: aliceblue;
            background-color: #333;
        }
        li{
            list-style: none;
        }
        a {
            color: aliceblue;
            text-decoration: none;
        }
        .pconly{
            display: none;
        }
        .carousel-control-next-icon,.carousel-control-prev-icon{
            display: none;
        }
        /*mobil opening*/
        .open-hours {
            text-align: left;
        }

        .open-hours-bold {
            font-weight: bold;
            background-color: #721B29;
            color: white;
        }
        /* NAV */
        .search{
            height: 38px;
            margin: 10px;
            position: relative;
        }
        .search img{
            height: 20px;
            width: 20px;
            position: absolute;
            top: 9px;
            right: 9px;
        }
        .logo {
            width: 50px;
            margin-right: 20px;
        }
        .navbar {
            background-color: #721B29;
        }
        .navbar-brand ,.nav-link{
            color: white;
        }

        @@media screen and (max-width: 992px) {
            .searcharea {
                display: none !important;
            }

            .searcharea2 {
                display: block;
            }
        }
        /* Footer */
        footer{
            background-color: #D8CDB9; 
            margin-top: 40px;
            color: #666;
            font-size: 14px;
        }
        footer a{
            color: #666;
        }
        .footright{
            margin: auto;
            padding: 20px 10px 10px 10px;
            text-align: right;
        }
        @@media screen and (min-width: 768px){
            .monly{
                display: none;
            }
            .pconly{
                display: block;
            }
            .topictext{
                position: relative;
                top: 40%;
                left: 30%;
                z-index: 2;
                width:max-content;
            }
            .topictext h2{
                font-size: 4rem;
            }
            .topictext p{
                font-size: 1.5rem;
            }
            .showup{
                display: none;
            }

            /* NAV */
            .pcmenu{
                position: relative;
                top: -40px;
            }
            .pclist li{
                padding: 4px;
                border-bottom: transparent 1px solid;
                transition:ease;
                transition-duration: 0.4s;
            }
            .pclist li:hover{
                color: #D8CDB9;
                border-bottom: #D8CDB9 1px solid;
                transition:ease;
                transition-duration: 0.4s;
            }
            .popoutimg{
                width: 30%;
                height: 30%;
                padding: 8px;
                margin-top: 40px;
                border-radius: 1rem;
            }

            /* INFO */
            td{
                padding: 8px 24px;
            }
            #googleMap{
                width: 90% !important;
            }
        }
    </style>
</head>
<body>
    <!-- 全網共用 nav -->
    <nav class="navbar monly navbar-expand-md ">
        <div class="container-fluid">
            <a asp-controller="Home" asp-action="Index"><img src="~/images/icons/logo-w.png" alt="" class="logo"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">            
                <ul class="navbar-nav me-auto mb-2 mb-md-0">
                    <form class="searcharea2 search" role="search">
                        <input class="form-control" type="search" placeholder="Search" aria-label="Search">
                        <a href=""><img src="Images/icons/search.png" alt=""></a>
                    </form>
                    <li class="nav-item">
                        <a class="nav-link"  href="#">推薦</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">經典酒款</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">算命調酒</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Booking" asp-action="Booking">線上訂位</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Member" asp-action="LoginRegister">會員</a>
                    </li>
                </ul>
                <form class="d-flex searcharea search" role="search">
                    <input class=" form-control" type="search" placeholder="Search" aria-label="Search">
                    <a href=""><img src="~/images/icons/search.png" alt=""></a>
                </form>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- PC only的文字區塊 -->
            <div class="col-md-3">
                <div class="topictext pconly">
                    <h2>Red's Bar</h2>
                    <p>Topic Not Yet Decided</p>                    
                </div>
            </div>
            <!-- SLIDE -->
            <div class="col-md-9 gx-0">
                <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="Images/BackGround/banner1.jpeg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="Images/BackGround/banner2.jpeg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="Images/BackGround/banner3.png" class="d-block w-100" alt="...">
                    </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                    </button>
                </div>                
            </div>
        </div>              
    </div>
    
    <!-- PC 選單 -->
    <div class="container pclist pconly">
        <div class="row">
            <div class="pcmenu col-md-3">         
                <ul>
                    <li><h2>Menu</h2></li>
                    <hr>
                    <li class="nav-item">
                        <a class="nav-link" id="recommand" href="#">Recommendation</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="classic" href="#">Classic</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Divination For You</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Booking" asp-action="Booking">Reservation</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Member" asp-action="LoginRegister">Member</a>
                    </li>
                </ul>            
            </div>
            <div class="col-md-9">
                <div class="showup recommand pconly">
                    <img class="popoutimg" src="Images/Cocktails/bloodymary.jpeg" alt="">
                    <img class="popoutimg" src="Images/Cocktails/junglebird.jpg" alt="">
                    <img class="popoutimg" src="Images/Cocktails/margarita.jpeg" alt="">
                </div>
                <div class="showup classic pconly">
                    <img class="popoutimg" src="Images/Cocktails/highball.jpg" alt="">
                    <img class="popoutimg" src="Images/Cocktails/Martini.jpeg" alt="">
                </div>
            </div>       
        </div>
    </div>

    <!--地圖/店家資訊-->
    <div class="container mt-3">
        <h4 class="monly">餐廳資訊</h4>
        <div class="row">
            <div class="map-text mt-3 col-md-4 order-md-1">
                <div class="map-item">
                    <a href="https://goo.gl/maps/Bz9u7pHWT7ePvPsFA">&nbsp;&nbsp;<img src="Images/icons/icon01.png" alt="">&nbsp; 100 台北市中正區濟南路一段321號</a>
                </div>
                <hr>
                <div class="map-item">
                    <a href="tel:0233221368">&nbsp;<img src="Images/icons/phone.png" alt=""> 02 3322 1368</a>
                </div>
                <hr>
                <!-- pc 營業時間 -->
                <div class="pclist pconly">
                    <table>
                            <tr><td>Sunday</td><td>18:00-00:00</td></tr>
                            <tr><td>Monday</td><td>&nbspDay&nbsp&nbsp&nbsp&nbspOff&nbsp</td></tr>
                            <tr><td>Tuesday</td><td>18:00-00:00</td></tr>
                            <tr><td>Wednesday</td><td>18:00-00:00</td></tr>
                            <tr><td>Thursday</td><td>18:00-00:00</td></tr>
                            <tr><td>Friday</td><td>18:00-02:00</td></tr>
                            <tr><td>Saturday</td><td>18:00-02:00</td> </tr>
                    </table>    
                </div>
                <!-- 手機 營業時間 -->
                <div class="map-item monly" id="d1">
                    <p>營業時間</p>
                    <button class="form-select open-hours" type="button" data-bs-toggle="dropdown">{{Weekday[MyDate.getDay()].name}}</button>
                    <ul class="dropdown-menu">
                        <li v-for="day in Weekday">
                            <button v-bind:class="bold(day,MyDate.getDay())" class="dropdown-item" type="button">{{day.name}}</button>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="mt-3 col-md-8 order-md-0">
                <div id="googleMap" style="width:100%;height:400px;"></div>
            </div>
        </div>
    </div>
    <!--footer-->
    <footer>
        <div class="container footright">
            <p><a href="https://goo.gl/maps/VARMRkiZqDQLhgWbA">100 台北市中正區濟南路一段321號</a></p>
            <p><a href="tel:0233221368">02 3322 1368</a></p>
            <p>© 2022 Alcoholic</p>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        var app = new Vue({
            el:'#d1',
            data:{
                MyDate: new Date,
                Weekday: [
                    { id: 0, name: '星期日 18:00-00:00' },
                    { id: 1, name: '星期一 公休' },
                    { id: 2, name: '星期二 18:00-00:00' },
                    { id: 3, name: '星期三 18:00-00:00' },
                    { id: 4, name: '星期四 18:00-00:00' },
                    { id: 5, name: '星期五 18:00-02:00' },
                    { id: 6, name: '星期六 18:00-02:00' }
                ]
            },
            methods: {
                bold: function (day, getDay) {
                    if (day.id == getDay) {
                        return 'open-hours-bold';
                    }
                }
            }
        });
    </script>
    <script>
        function myMap() {
        var mapProp= {
        center:new google.maps.LatLng(25.043025219011874, 121.52522706375855),
        zoom:18,disableDefaultUI: true,zoomControl: true,
            styles:[
                { 
                    elementType: 'geometry', stylers: [{color: '#242f3e'}] 
                },
                { 
                    elementType: 'labels.text.stroke', stylers: [{color: '#242f3e'}] 
                },
                { 
                    elementType: 'labels.text.fill', stylers: [{color: '#746855'}] 
                },
                {
                    featureType: 'administrative.locality',
                    elementType: 'labels.text.fill',
                    stylers: [{color: '#d59563'}]
                },
                {
                    featureType: 'poi',
                    elementType: 'labels.text.fill',
                    stylers: [{color: '#d59563'}]
                },
                {
                    featureType: 'poi.park',
                    elementType: 'geometry',
                    stylers: [{color: '#263c3f'}]
                },
                {
                    featureType: 'poi.park',
                    elementType: 'labels.text.fill',
                    stylers: [{color: '#6b9a76'}]
                },
                {
                    featureType: 'road',
                    elementType: 'geometry',
                    stylers: [{color: '#38414e'}]
                },
                {
                    featureType: 'road',
                    elementType: 'geometry.stroke',
                    stylers: [{color: '#212a37'}]
                },
                {
                    featureType: 'road',
                    elementType: 'labels.text.fill',
                    stylers: [{color: '#9ca5b3'}]
                },
                {
                    featureType: 'transit',
                    elementType: 'geometry',
                    stylers: [{color: '#2f3948'}]
                },
                {
                    featureType: 'transit.station',
                    elementType: 'labels.text.fill',
                    stylers: [{color: '#d59563'}]
                }
            ]
        };
        var map = new google.maps.Map(document.getElementById("googleMap"),mapProp);
        var marker = new google.maps.Marker(
            {
                position: mapProp.center,
                icon:"Images/icons/icon01.png",
                animation:google.maps.Animation.BOUNCE,
                
            });
        marker.setMap(map);
        }

        let recommand = document.getElementById("recommand");
        let classic = document.getElementById("classic");
        let recommandclass = document.getElementsByClassName("recommand")[0];
        let classicclass = document.getElementsByClassName("classic")[0];

        recommand.addEventListener("mouseenter",popOutRe);
        recommand.addEventListener("mouseenter",display);
        recommand.addEventListener("mouseout",popOutRe);
        classic.addEventListener("mouseenter",popOutCl);
        classic.addEventListener("mouseenter",display);
        classic.addEventListener("mouseout",popOutCl);

        var ms = 0;
        var countdown;

        function popOutRe(){
            recommandclass.classList.toggle("showup");
            clearInterval(countdown);
            ms = 0;
            recommandclass.style.opacity = 0;
        }
        function popOutCl(){
            classicclass.classList.toggle("showup");
            clearInterval(countdown);
            ms = 0;
            classicclass.style.opacity = 0;
        }
        function display(){
            countdown = setInterval(()=>{
                ms = ms + 0.04
                recommandclass.style.opacity = ms; 
                classicclass.style.opacity = ms;
            },30);
        }

        
    </script>    
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAVVm5mchHhBmVCsFrrXAP_ir4J3JO5xVw&callback=myMap"></script>
</body>
</html>
