@{
    ViewData["Title"] = "訂位管理";
    Layout = "~/Areas/BackCenter/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/vue2-datepicker@3.11.0/index.css"><style>
    .table {
        text-align: center;
    }
    .bookinginfo button {
        line-height: 24px;
    }
    /*當日訂位*/
    .bookingtoday {
        border: 1px solid rgb(215, 215, 215);
        border-radius: 0.375rem;
    }
    .todaydata {
        width: 100%;
        justify-content: space-around;
    }
    .todaydata thead {
        background-color: #D8CDB9;
        height: 30px;
        line-height: 30px;
    }

    .bookinginfo thead{
        background-color: rgb(215, 215, 215);
    }
    .bookinginfo td {
        line-height: 100px;
    }
    .todaydata tbody tr:hover {
        background-color: rgb(241, 241, 241);
    }
    /*篩選訂位*/
    .datepick{
        width: auto;
    }
    .btn-search{
        border: 1px solid #ccc;
        border-radius: 4px;
        color: #555;
        padding: 6px 10px;
        font-size: 14px;
        line-height: 1.4;
    }
    /*Modal*/
    label{
        padding:12px 0 6px 3px;
    }
    .bookingdAdding input, .bookingdAdding select {
        border: 1px solid #ccc;
        border-radius: 4px;
        height:38px;
        padding:6px 12px 6px 12px;
    }
</style>
<div class="bookingmanage container-fluid p-5" id="d1">
    <div class="spacebetween row-cols-2 mb-3">
        <h3>訂位管理</h3>
        <button type="button" class="addbtn" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
            <i class="fa-sharp fa-solid fa-plus"></i> 新增訂位
        </button>
    </div>
    <hr>
    <div class="py-4">
        <div class="todaydata">
            <div class="bookingtoday p-4">
                <h5>本日訂位數據</h5>
                <h2 class="m-0">{{today.toLocaleDateString()}}</h2>
                <br>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">狀態</th>
                            <th scope="col">姓名</th>
                            <th scope="col">電話</th>
                            <th scope="col">人數</th>
                            <th scope="col">下訂日期</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr v-for="item in todayReserves">
                            <td><input type="checkbox"></td>
                            <td>{{item.name}}</td>
                            <td>{{item.phone}}</td>
                            <td>{{item.number}}</td>
                            <td>{{item.setDate.substring(0,10)}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="py-4">
        <div class="spacebetween row-cols-2 mb-3">
            <h3>查詢訂位數據</h3>
            <div class="datepick">
                <date-picker v-model="SelectDate" value-type="format" class="datepicker p-0" id="datepicker"
                             placeholder="日期篩選" name="date" :disabled-date="disablerange"></date-picker>
                <button class="btn-search" v-on:click="SearchClick()">搜尋</button>
            </div>
        </div>
        <div class="bookinginfo">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">預定日期</th>
                        <th scope="col">姓名</th>
                        <th scope="col">電話</th>
                        <th scope="col">人數</th>
                        <th scope="col">下訂日期</th>
                        <th>變更</th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="item in SearchDate">
                        <td>{{item.date.substring(0,10)}}</td>
                        <td>{{item.name}}</td>
                        <td>{{item.phone}}</td>
                        <td>{{item.number}}</td>
                        <td>{{item.setDate.substring(0,10)}}</td>
                        <td>
                            <button class="btnproducts"><i class="fa-solid fa-trash"></i></button>
                            <button class="btnproducts" data-bs-toggle="modal" data-bs-target="#staticBackdrop" v-on:click="EditClick()"><i class="fa-solid fa-pen-to-square"></i></button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static"
         data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="staticBackdropLabel">新增訂位</h3>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="booking">
                    <div class="modal-body container bookingdAdding">
                        <label for="datepicker">用餐日期：</label>
                        <date-picker v-model="ReserveDate" valueType="format" class="datepicker p-0 w-100" id="datepicker"
                                        placeholder="選擇用餐日期" :disabled-date="modeldisablerange"></date-picker>
                        <input name="ReserveDate" v-bind:value="SendDate" hidden>
                        <label for="people">用餐人數：</label>
                        <select name="Number" id="people" class="form-select w-100" v-model="Number">
                            <option value="" disabled>選擇用餐人數</option>
                            <template v-for="peo in people">
                                <option :disabled="maxPeople(peo.value)" :value="peo.value">{{peo.txt}}</option>
                            </template>
                        </select>
                        <label for="reserveName">訂位姓名：</label>
                        <input v-model="ReserveName" type="text" id="reserveName" class="w-100">
                        <label for="phone">聯絡電話：</label>
                        <input v-model="Phone" type="text" id="phone" class="w-100" maxlength="10" minlength="10" placeholder="09xxxxxxxx">
                        <label for="email">Email：</label>
                        <input v-model="Email" type="email" id="email" class="w-100">
                    </div>
                    <div class="modal-footer">
                        <div class="row m-0">
                            <button class="col btneaddcancel m-1" type="button" data-bs-dismiss="modal"><i class="fa-solid fa-square-xmark"></i> 離開編輯</button>
                            <button v-on:click="addBooking" class="col btneditproducts m-1" type="button" data-bs-dismiss="modal"><i class="fa-solid fa-square-check"></i> 儲存編輯</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/vue2-datepicker@3.11.0/index.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.5.2/dist/sweetalert2.min.js"></script>
<script>
    var app = new Vue({
        el: '#d1',
        data: {
            today: new Date,
            reserveInfos: [],
            SelectDate: null,
            SearchDate:[],
            /* Modal */
            bookingInfos: [],
            people: [
                { value: 1, txt: '1位成人' },
                { value: 2, txt: '2位成人' },
                { value: 3, txt: '3位成人' },
                { value: 4, txt: '4位成人' }
            ],
            ReserveDate: null,
            SendDate: null,
            Number: '',
            ReserveName:'',
            Phone:'',
            Email:'',
        },
        computed: {
            todayReserves() {
                let todayReserf = [];
                let day = new Date;
                day.setHours(8);
                day = day.toJSON().substring(0, 10);
                Object.values(this.reserveInfos).forEach(function (x) {
                    if (x.date.substring(0, 10) == day){
                        todayReserf.push(x)
                    }
                })
                return todayReserf;
            },
        },
        watch:{
            ReserveDate:function(){
                if (this.ReserveDate!=null)
                    this.SendDate = this.ReserveDate.toLocaleDateString().replace('/', '-').replace('/', '-');
            }
        },
        methods: {
            disablerange: function (date) {
                var isBooking = this.reserveInfos.some(x => new Date(x.date).getTime() == date.getTime());
                return !isBooking;
            },
            SearchClick: function(){
                let search=[];
                day = this.SelectDate;
                Object.values(this.reserveInfos).forEach(function (x) {
                    if (x.date.substring(0, 10) == day) {
                        search.push(x)
                    }
                })
                this.SearchDate = search;
            },
            modeldisablerange: function (date) {
                var today = new Date();
                today.setHours(0, 0, 0, 0);
                var mindate = new Date(today.getTime() + 1 * 24 * 3600 * 1000);
                var maxdate = new Date(today.getTime() + 30 * 24 * 3600 * 1000);
                var isBooking = this.bookingInfos.some(x => new Date(x.date).getTime() == date.getTime() && x.total >= 16);
                return date < mindate || date > maxdate || date.getDay() % 7 == 1 || isBooking;
            },
            maxPeople: function (people) {
                if (this.ReserveDate) {
                    let pickTime = this.ReserveDate.getTime();
                    let currectBookingInfo = this.bookingInfos.find(x => new Date(x.date).getTime() == pickTime);
                    if (currectBookingInfo != null) {
                        return 16 - currectBookingInfo.total < people;
                    }
                    return false;
                }
            },
            addBooking: function(){
                let info = {
                    ReserveDate: this.SendDate,
                    ReserveName: this.ReserveName,
                    Email: this.Email,
                    Phone: this.Phone,
                    Number: this.Number,
                }
                fetch('/api/Booking/AddBooking',{
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify(info)
                })//這裡會出現錯誤訊息，而且沒辦法顯示Swal.fire
                .then(e => { return e.json(); })
                .then((result)=>{
                    if(result){
                        Swal.fire({
                            position: 'top-end',
                            icon: 'success',
                            title: '加入訂位成功',
                            showConfirmButton: false,
                            timer: 1500
                        })
                    }
                })
                .catch(err => console.log('Request Failed', err));
            },
            EditClick:function(){
                
            },
        },
        beforeCreate: function () {
            let self = this;
            fetch('/backcenter/bookings/GetAllBookings')
                .then(function (response) { return response.json() })
                .then(function (result) { self.reserveInfos = result })
            fetch('/api/Booking/GetFrontBookings')
                .then(function (response) { return response.json() })
                .then(function (result) { self.bookingInfos = result })
        }
    });
</script>